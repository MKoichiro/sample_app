{
  // general:
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "emmet.includeLanguages": {
    "erb": "html"
  },
  // Ruby:
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  // Ruby LSP:
  // 本当は自動検知されるらしいが、うまくいかないのでrubyのパスを指定
  "rubyLsp.rubyExecutablePath": "/home/koichiro/.rbenv/shims/ruby",
  // ruby packagemanagerを通知
  "rubyLsp.rubyVersionManager": {
    "identifier": "rbenv",
  },
  "rubyLsp.enabledFeatures": {
    "codeActions": true,
    "diagnostics": true,
    "documentHighlights": true,
    "documentLink": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "formatting": true,
    "hover": true,
    "inlayHint": true,
    "onTypeFormatting": true,
    "selectionRanges": true,
    "semanticHighlighting": true,
    "completion": true,
    "codeLens": true,
    "definition": true,
    "workspaceSymbol": true,
    "references": true
  },
  // rubocop gem or syntax tree gemに対応。
  // "auto"の指定で、インストールされているものが自動で選択される。（明示も可）
  "rubyLsp.formatter": "rubocop",
  // ruby-lspのerbサポートにバグがあるため一時無効化。
  // https://github.com/Shopify/ruby-lsp/issues/2282#issuecomment-2236578267
  "rubyLsp.erbSupport": false,
  // Solargraph:
  // gemはグローバルインストールしているものを使うので、Bundlerを使わない
  "solargraph.useBundler": false,
  "solargraph.commandPath": "/home/koichiro/.rbenv/shims/solargraph",
  "cSpell.words": [
    "hotwired",
    "importmap"
  ],
}